<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.UI.Fragments.IR">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/onnnnn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:background="#fff"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="160sp"
                        android:layout_height="100sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="45sp"
                        app:cardCornerRadius="12sp">

                        <ImageView
                            android:id="@+id/layout_country_wise_flag_imageview_two_ir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_iran" />

                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8.5sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="15sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="یک مبتلا به ازای جمعیت :"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_oneCasePerPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="165sp"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8.5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="یک جانباخته به ازای جمعیت :"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/OneDeathPerPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="165sp"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8.5sp"
                        android:layout_marginTop="25sp"
                        android:layout_marginRight="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="یک تست شده به ازای جمعیت :"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/oneTestPerPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="165sp"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/population_ir"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="115sp"
                        android:gravity="left"
                        android:textColor="@color/blackColor"
                        android:textSize="21sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginTop="115sp"
                        android:layout_marginEnd="5sp"
                        android:gravity="right"
                        android:text="جمعیت کشور :"
                        android:textColor="@color/blackColor"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="#FE1F1F2E"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:src="@drawable/ic_coronavirus_two" />

                        <org.eazegraph.lib.charts.PieChart
                            android:id="@+id/piechart_ir"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="1.07"
                            android:padding="4dp"
                            app:egInnerPaddingColor="#E3EAE8"
                            app:egLegendHeight="0dp"
                            app:egValueTextSize="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="75sp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            tools:ignore="RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/blue_pie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="@string/active"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/green_pie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="@string/recovered"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="@string/death"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/onnnnn"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_death"
                        android:layout_width="182sp"
                        android:layout_height="150sp"
                        android:layout_marginEnd="5sp"
                        app:cardCornerRadius="12sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/death_card_bg" />

                        <ImageView
                            android:id="@+id/imageView_death"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="5sp"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/death"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12.8sp"
                            android:maxLines="1"
                            android:text="امروز"
                            android:textColor="#e9efff"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="75sp"
                            android:layout_marginTop="40sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/d2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="11sp"
                                android:maxLines="1"
                                android:text="مبتلایان : "
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/d3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/d2"
                                android:layout_marginTop="11sp"
                                android:maxLines="1"
                                android:text="جانباختگان : "
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/d3"
                                android:layout_marginTop="9sp"
                                android:maxLines="1"
                                android:text="بهبود یافتگان : "
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="42sp"
                            android:layout_marginEnd="95sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/today_cases_num_ir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9.5sp"
                                android:gravity="center"
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/today_deaths_num_ir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/today_cases_num_ir"
                                android:layout_marginTop="9.5sp"
                                android:gravity="center"
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/today_recovered_num_ir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/today_deaths_num_ir"
                                android:layout_marginTop="8sp"
                                android:gravity="center"
                                android:textColor="#e9efff"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_main_recovered_card"
                        android:layout_width="182sp"
                        android:layout_height="150sp"
                        app:cardCornerRadius="12sp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/recovered_card_bg" />

                        <ImageView
                            android:id="@+id/imageView_recovered"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginEnd="5sp"
                            android:src="@drawable/ic_microscope" />

                        <TextView
                            android:id="@+id/recovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="9.5sp"
                            android:layout_marginTop="12.8sp"
                            android:maxLines="1"
                            android:text="آمار تست شدگان کشوری"
                            android:textColor="@color/blackColor"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="49sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_world_data_recovered_title_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:maxLines="1"
                                android:text="کل تست شدگان"
                                android:textColor="@color/blackColor"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tests_num_ir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/activity_world_data_recovered_title_textView"
                                android:layout_marginLeft="25sp"
                                android:layout_marginTop="-5sp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/blackColor"
                                android:textSize="17sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="95sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/testtwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="یک تست شده در هر میلیون"
                                android:textColor="@color/blackColor"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tests_mil_num_ir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/testtwo"
                                android:layout_marginLeft="55sp"
                                android:layout_marginTop="-5sp"
                                android:textColor="@color/blackColor"
                                android:textSize="17sp" />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_main_active_card"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_gravity="right"
                    app:cardCornerRadius="12sp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/active_card_bg" />

                    <ImageView
                        android:id="@+id/imageView_active"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/iran" />

                    <TextView
                        android:id="@+id/active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4sp"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="آمار کل کشور"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19sp"
                        android:layout_marginRight="12sp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_world_data_active_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11sp"
                            android:maxLines="1"
                            android:text="مبتلایان : "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_world_data_active_title_textView"
                            android:layout_marginTop="5sp"
                            android:maxLines="1"
                            android:text="جانباختگان : "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/two"
                            android:layout_marginTop="5sp"
                            android:maxLines="1"
                            android:text="بهبودیافتگان : "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/three"
                            android:layout_marginTop="5sp"
                            android:maxLines="1"
                            android:text="@string/critical"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35sp"
                        android:layout_marginEnd="80sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_cases_num_ir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/total_deaths_num_ir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total_cases_num_ir"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/recovered_num_ir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total_deaths_num_ir"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/critical_num_ir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/recovered_num_ir"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>