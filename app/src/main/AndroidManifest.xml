<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid19tracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:allowBackup="true"
        android:icon="@drawable/patient"
        android:label="@string/app_name"
        android:roundIcon="@drawable/patient"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.Activities.AboutActivity" />
        <activity android:name="com.example.Activities.WorldDataActivity" />
        <activity android:name="com.example.Activities.EachCountryDataActivity" />
        <activity android:name="com.example.Activities.CountryWiseDataActivity" />
        <activity android:name="com.example.Activities.MainActivity" />

        <activity android:name="com.example.Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>